<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/Product/Index" style="font-size:initial;">Trang Chủ</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <span>
                            <a href="/ShoppingCart/ShowCart">
                                <span class="glyphicon glyphicon-shopping-cart" style="color: #808080; height:30px; width: 30px; margin-top: 12px; "></span>
                            </a>
                        </span>
                        @Html.Action("BagCart", "ShoppingCart")
                    </li>
                    <li><a href="/LoginUser/RegisterUser" style="font-size: initial; margin-top: 2px"><span class="glyphicon glyphicon-user"></span> Sign Up </a></li>
                    <li><a href="/LoginUser/Index" style="font-size: initial; margin-top: 2px"><span class="glyphicon glyphicon-log-in"></span> LogIn </a></li>
                    <li><a href="@Url.Action("LogoutUser","LoginUser")" style="margin-top:2px ;font-size:initial;"><span class="glyphicon glyphicon-log-out"></span> Logout </a></li>
                    <li style="padding-top:15px; color:white;">
                        @if (Session["NameUser"] == null)
                        {
                            <span>Hello</span>
                        }
                        else
                        {
                            <span> <text> Hello </text> @Session["NameUser"] </span>
                        }

                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-2">
                <ul style="text-decoration:none;background-color:cornflowerblue;border:double ;margin-top:20px;list-style-type:none;padding:10px;">
                    <li><a href="/OrderDetail/GroupByTop5" style="color:white;" id="animation-top5">Top 5 sản phẩm bán chạy</a></li>
                </ul>
                <ul style="list-style-type:none;">
                    <li>
                        <a href="/Product/SearchOption" class="btn btn-default">Search theo giá</a>
                    </li>
                </ul>
                @{ Html.RenderAction("CategoryPartial", "Categories");}
            </div>
            <div class="col-md-10" id="div-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="mb50"></div>
    <div id="footer">
        <div class="footer-top">
            <div class="info-contact">
                <h4>Thông tin liên hệ</h4> <br>
                <b>028 7108 1881 - 090 703 1881</b> <br><br>
                <p>sales@thenewxgear.com</p>
                <p>support@thenewxgear.com</p><br>
                <p>
                    HCM : Thứ 2 - Thứ 7 09h:00 - 20h:00  <br>
                    HCM : Chủ nhật 09h:00 - 19h:00  <br>
                    HN : Thứ 2 - Thứ 7 09h:00 - 20h:00 <br>
                    HN : Chủ nhật 09h:00 - 19h:00
                </p>
                <div class="img-cert">
                    <img class="img-cert-1" width="90" height="40" src="~/Content/img/cert1.png" alt="">
                    <img class="img-cert-2" width="90" height="40" src="~/Content/img/cert2.png" alt="">
                </div>
            </div>
            <div class="info-contact">
                <h4>Hệ thống cửa hàng</h4>
                <li>
                    <i class="address-pin ti-location-pin"></i>
                    10A1, Ngõ 49 Linh Lang, Ba Đình, Hà Nội
                </li>
                <li>
                    <i class="address-pin ti-location-pin"></i>
                    73 Tự Cường, Phường 4, Tân Bình, Hồ Chí Minh
                </li>
                <li>
                    <i class="address-pin ti-location-pin"></i>
                    08 Tự Lập, Phường 4, Tân Bình, Hồ Chí Minh
                </li>
            </div>
            <div class="info-contact">
                <h4>Đăng ký nhận bản tin</h4>
                <input type="text" placeholder="Nhập email của bạn" class="type-email">
                <input type="submit" class="submit-email" value="Gửi" />
                <h4 class="ptb24">Hỗ trợ thanh toán</h4>
                <img class="img-pay" width="30" height="30" src="~/Content/img/visa.png" alt="">
                <img class="img-pay" width="30" height="30" src="~/Content/img/jcb.png" alt="">
                <img class="img-pay" width="30" height="30" src="~/Content/img/mastercard.png" alt="">
                <img class="img-pay" width="30" height="30" src="~/Content/img/atm.png" alt=""><br>
                <img class="img-pay" width="30" height="30" src="~/Content/img/moca.png" alt="">
                <img class="img-pay" width="30" height="30" src="~/Content/img/viettelpay.png" alt="">
                <img class="img-pay" width="30" height="30" src="~/Content/img/momo.png" alt="">
                <img class="img-pay" width="30" height="30" src="~/Content/img/zalopay.png" alt="">
            </div>
            <div class="info-contact">
                <h4>Liên kết nhanh</h4>
                <div>
                    <ul class="contact-list">
                        <li><a href="">Về Xgear</a></li>
                        <li><a href="">Sản phẩm</a></li>
                        <li><a href="">Liên hệ </a></li>
                        <li><a href="">Tin Tức</a></li>
                    </ul>
                </div>
                <h4 class="mt30">Hướng dẫn mua hàng</h4>
                <div>
                    <ul class="shopping-guide">
                        <li><a href="">Cách thức mua hàng</a></li>
                        <li><a href="">Chính sách thu hồi hàng hóa</a></li>
                        <li><a href="">Chính sách bảo hành</a></li>
                        <li><a href="">Hình thức thanh toán</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="mt30 footer-bot">
            <div class="copyright-section">
                <p>
                    Copyright © 2022 Xgear | All rights reserved | Chứng nhận đăng ký doanh nghiệp số : 0316898252 do sở KH và ĐT TP Hồ Chí Minh cấp.
                </p>
            </div>
            <div class="social">
                <ul>
                    <li><a href=""><i class="ti-instagram"></i></a></li>
                    <li><a href=""><i class="ti-facebook"></i></a></li>
                    <li><a href=""><i class="ti-youtube"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
